# MilkRecord Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION SETTINGS
# ============================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000
HOST=127.0.0.1
RUNTIME=desktop

# ============================================
# SUPABASE CLOUD SETTINGS
# ============================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# IMPORTANT: Use ANON key in desktop/EXE, not SERVICE ROLE key
# Service role key should only be used in secure backend

# ============================================
# HARDWARE SETTINGS (Desktop Only)
# ============================================
# Serial ports for hardware integration
SCALE_PORT=COM3
ANALYZER_PORT=COM4
BAUDRATE=9600

# ============================================
# SYNC SETTINGS
# ============================================
SYNC_INTERVAL=10
MAX_SYNC_RETRIES=3

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/milkrecord.log

# ============================================
# DEPLOYMENT SPECIFIC
# ============================================

# For Vercel deployment:
# VERCEL=1
# DATABASE_URL=postgresql://... (if using additional DB)

# For Windows EXE:
# No additional settings needed

# ============================================
# PLANT/DEVICE IDENTIFICATION
# ============================================
# Optional: Override auto-generated device ID
# DEVICE_ID=custom-device-id
# PLANT_CODE=PLANT001
